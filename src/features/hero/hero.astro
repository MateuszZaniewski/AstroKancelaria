---
import CtaButton from "../../ui/CtaButton.astro";
---

<div
  class=`bg-[url('/tłoMobile.svg')] md:bg-[url('/tłoLg.svg')] lg:bg-[url('/tłoLg.svg')] xl:bg-[url('/tło.svg')] min-h-[100vh] min-h-screen w-auto bg-cover bg-center md:bg-right-top lg:bg-right-top xl:bg-top xl:max-w-[2600px] xl:mx-auto opacity-0 animate-revealHero`
>
  <div
    class="flex flex-col items-center justify-between min-h-screen xl:mr-[16vw]"
  >
    <!-- Animate from here -->
    <div
      class="w-full px-12 md:px-0 lg:px-12 pt-[13.062vh] md:pl-[2vw] lg:w-[1000px] lg:mr-0 2xl:max-w-[2000px] 2xl:pt-60 2xl:pr-80 h-full invisible animate-animateHeroText"
    >
      <div
        class="flex justify-center pb-[4.7vh] max-w-[400px] mx-auto lg:mx-0 lg:max-w-[46vw] md:mx-0"
      >
        <img
          src="adwokatura.svg"
          class="lg:w-32 lg:h-32 md:w-24 md:h-24 w-[36.923vw] h-[17.062vh] max-w-[144px] md:max-w-full"
          alt="logo-adwokatura"
        />
      </div>
      <div
        class="flex flex-col gap-[4.7vh] text-center pb-[6.4vh] max-w-[400px] md:max-w-[400px] mx-auto lg:justify-start lg:mx-0 lg:max-w-[46vw] md:mx-0"
      >
        <h1
          class="font-cinzel leading-[1.2] 2xl:text-6xl lg:text-5xl md:text-[40px] text-[30px]"
        >
          Kancelaria adwokacka
        </h1>
        <h1
          class="font-cinzel leading-[1.2] 2xl:text-6xl lg:text-5xl md:text-[40px] text-[30px]"
        >
          Adwokat <br /> Paulina komenda
        </h1>
      </div>
      <div
        class="flex flex-col items-center gap-[3.5vh] justify-center md:max-w-[400px] lg:max-w-[46vw] lg:flex-row lg:gap-12 opacity-0 animate-animateHeroButtons"
      >
        <a href="#contact" class="nav-link">
          <CtaButton text="SKONTAKTUJ SIĘ" variant="contain" />
        </a>
        <a href="#services" class="nav-link">
          <CtaButton text="USŁUGI PRAWNE" variant="outlined" />
        </a>
      </div>
    </div>
    <!-- Animate to this point -->
    <div class="flex items-end h-full sm:h-24 mt-8 md:h-16 w-4 md:hidden">
      <div
        class="bg-[#B58C67] w-[2px] h-16 relative overflow-hidden invisible animate-showElement"
      >
        <div
          class="bg-[#0E1F2A] w-[2px] rounded-full h-4 absolute -top-4 left-0 animate-animateLine"
        >
        </div>
      </div>
    </div>
  </div>
</div>

<script src="../../helpers/smoothScroll.js">
  document.addEventListener("DOMContentLoaded", () => {
    enableSmoothScroll(".nav-link");
  });
</script>
