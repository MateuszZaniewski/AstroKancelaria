<script>
  const modal = document.getElementById("modal");
  const kanca = document.getElementById("kanca");
  const closeBtn = document.getElementById("closeBtn");

  modal.addEventListener("click", (e) => {
    kanca.classList.toggle("hidden");
  });
  // To close the image when clicking outside the image or on ESC key
  kanca.addEventListener("click", (e) => {
    if (e.target !== kanca) return;
    kanca.classList.add("hidden");
  });

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
      kanca.classList.add("hidden");
    }
  });

  closeBtn.addEventListener("click", () => {
    kanca.classList.add("hidden");
  });
</script>
